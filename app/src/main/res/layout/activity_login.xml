<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/login"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Button
        android:id="@+id/login_next_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:text="Next"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:background="#FFC000"
        android:layout_alignParentStart="true" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/lastname_textiplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_below="@+id/firstname_textiplayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="1">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/lastname_edittext"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="Last Name"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstname_textiplayout"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textColorHint="@android:color/white"
        android:layout_alignParentStart="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/firstname_edittext"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="First Name"
            android:maxLines="1">

            <requestFocus />
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/streetaddr_2_textiplayout"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_textiplayout"
        android:layout_above="@+id/login_next_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/streetaddr_2_te"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Street address"
            android:textColor="@android:color/white"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phone_textiplayout"
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname_textiplayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/phone_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="Phone Number"
            android:textColor="@android:color/white"
            android:inputType="phone"
            android:maxLines="1"
            android:layout_marginBottom="14dp" />
    </android.support.design.widget.TextInputLayout>
</RelativeLayout>